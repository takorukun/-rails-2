<h1>プロフィール編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, multipart: true) do |f| %>

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :画像アップロード %>
      <%= f.file_field :post_image, class: 'form-control' %>
      <%= f.hidden_field :post_image_cache %>

      <%= f.label :自己紹介 %>
      <%= f.text_field :introduction, class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

    
  </div>
</div>