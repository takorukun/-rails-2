<h2>新規登録</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @room do |f| %>
        

        <%= f.label :施設名 %>
        <%= f.text_field :room_name, class: 'form-control' %>
  
        <%= f.label :施設詳細 %>
        <%= f.text_area :room_intro, class: 'form-control' %>
  
        <%= f.label :料金 %>
        <%= f.text_field :fee_p_d, class: 'form-control' %>
  
        <%= f.label :住所 %>
        <%= f.text_field :address, class: 'form-control' %>

        <%= f.label :施設画像 %>
      <%= f.file_field :room_image, class: 'form-control' %>
      <%= f.hidden_field :room_image_cache %>

      <%= f.hidden_field :user_id, class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>

      <%= link_to "キャンセル", :back %>

    <% end %>
  </div>
</div>
