<div>
  <%= search_form_for @q_home,url: rooms_path do |f| %>
    <%= f.search_field :address_cont, class: 'form-control', placeholder: 'エリア名を入力' %>
  <% end %>
  <%= search_form_for @q_home,url: rooms_path do |f| %>
    <%= f.search_field :room_name_or_room_intro_cont, class: 'form-control', placeholder: 'キーワードを入力' %>
    <%= f.submit '検索', class: 'btn btn-primary' %>
  <% end %>
</div>

 <h3>登録一覧</h3>

 <table>
   <thead>
     <tr>
       <th>施設名</th>
       <th>施設詳細</th>
       <th>料金</th>
       <th>施設画像</th>
       <th>住所</th>
       <th>投稿日時</th>
     </tr>
   </thead>
 
   <tbody>
     <% @rooms.each do |room| %>
       <tr>
         <td><%= room.room_name %></td>
         <td><%= room.room_intro %></td>
         <td><%= room.fee_p_d %></td>
         <td>
         <% if room.room_image.blank? %>
          <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png' %>
         <% else %>
          <%= image_tag room.room_image.url %>
         <% end %>
         </td>
         <td><%= room.address %></td>
         <td><%= room.created_at.to_s(:datetime_jp) %></td>
         <td><%= link_to "詳細はこちらから", room, method: :get  %></td>
       </tr>
     <% end %>
   </tbody>
 </table>